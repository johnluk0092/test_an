<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/order_list_detail_item_iv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/order_list_detail_item_tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/order_list_detail_item_iv_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_list_detail_item_tv_title_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/order_list_detail_price"
            app:layout_constraintStart_toEndOf="@id/order_list_detail_item_iv_image"
            app:layout_constraintTop_toBottomOf="@id/order_list_detail_item_tv_product_name" />

        <TextView
            android:id="@+id/order_list_detail_item_tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/order_list_detail_item_tv_title_price"
            app:layout_constraintTop_toBottomOf="@id/order_list_detail_item_tv_product_name" />

        <TextView
            android:id="@+id/order_list_detail_item_tv_title_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_list_detail_quantity"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/order_list_detail_item_iv_image"
            app:layout_constraintTop_toBottomOf="@id/order_list_detail_item_tv_title_price" />

        <TextView
            android:id="@+id/order_list_detail_item_tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/order_list_detail_item_tv_title_quantity"
            app:layout_constraintTop_toBottomOf="@id/order_list_detail_item_tv_title_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>